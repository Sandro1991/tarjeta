{% extends 'base.html.twig' %}

{% block aside %}
    {% include ':Admin:aside_super.hmtl.twig' %}
{%endblock%}

{% block page_content %}
    {% form_theme form '@App/Form/fields.html.twig' %}
        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Complejos
                    <small>Panel de Control</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Inicio</a></li>
                    <li class="active">Escritorio</li>
                </ol>
            </section>
            <section class="content">
                <div class="hpanel hred">
                    <div class="panel-heading">
                        <h3>Nuevo Complejo</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.nameComp, 'Nombre', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.nameComp) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.direComp, 'Dirección', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.direComp) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.phonComp, 'Teléfono', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.phonComp) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.mailComp, 'Email', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.mailComp) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.descripComp, 'Descripción', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.descripComp) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.urlComp, 'URL', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.urlComp) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.idRede, 'Redes Sociales', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.idRede) }}
                                <br></br>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.idServ, 'Servicios', {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.idServ) }}
                            </div>
                            <div>
                                <div class="panel-footer text-center">
                                    <a class="btn btn-default" href="{{ path('complex_index') }}">Atrás</a>
                                    <input type="submit" value="Crear" class="btn btn-success"/>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </section>
        </div>
{% endblock %}
