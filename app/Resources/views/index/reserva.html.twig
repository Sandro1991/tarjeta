{% extends ':index:index.html.twig' %}

{% block header %}{% endblock %}

{% block container %}
	<div class="container">
		<div class="container-fluid">
			<!-- Page Heading/Breadcrumbs -->
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">
					</h1>
					<ol class="breadcrumb">
						<li><a href="{{ path('app_default') }}">Home</a></li>
						<li><a href="{{ path('complex_index')}}">Complejos</a></li>
						<li class="active">Descripción</li>
					</ol>
				</div>
			</div>
			<section class="content">
				<div class="hpanel hred">
					<div class="panel-heading">
						<h3>Reserva tu Cancha</h3>
					</div>
					<div class="panel-body">
                        {{ form_start(form) }}
						<div class="form-group col-sm-12">
							{{ form_label(form.idCanch) }}
                            {{ form_widget(form.idCanch) }}
                            {{ form_label(form.fechaReserva) }}
                            {{ form_widget(form.fechaReserva) }}
							<div class="text-center">
								<a class="btn btn-default" href="{{ path('app_default') }}">Atrás</a>
								<input type="submit" value="Reservar" class="btn btn-success"/>
							</div>
						</div>
                        {{ form_end(form) }}
					</div>
				</div>
			</section>
		</div>
	</div>
{% endblock %}
