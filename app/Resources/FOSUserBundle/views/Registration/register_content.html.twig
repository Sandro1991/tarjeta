                                <span class="help-block">
                                    {{ form.dni_user.vars.errors[0].message }}
                                    </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="form-group{% if form.fnac_user.vars.errors[0].message is defined %} has-error{% endif %}">
                    {{ form_label(form.fnac_user, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
